<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSetting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            android:gravity="center_horizontal" />
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/_16dp"
        android:text="NOTIFIKASI"
        android:textStyle="bold"
        android:textColor="@color/grey_600"
        android:textSize="14sp" />

    <Switch
        android:id="@+id/switchNotifNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:text="Berita"
        android:textColor="@color/grey_600"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/switchNotifEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:text="Acara"
        android:textColor="@color/grey_600"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/_16dp"
        android:text="Jika tidak menerima notifikasi, Silahkan cek di Security Center pada perangkat anda untuk mengaktifkan notifikasi"
        android:textColor="@color/grey_600"
        android:textSize="14sp" />

</LinearLayout>
